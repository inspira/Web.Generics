@model Inspira.Blog.WebMvc3.Models.Identity.LogOnModel

@{
Layout = "../Shared/_BasicLayout.cshtml";
}

<!-- main wrapper -->
<div class="yui-b">
	<div class="yui-g">
		<h2>Log On</h2>
		<p>Please enter your username and password. @Html.ActionLink("Register", "Register") if you don't have an account.</p>
		<!-- form -->
		<div class="block">
			<div class="hd">
				<h2>Login</h2>
			</div>
			<div class="bd">
				<h3>Enter your credentials in the form below</h3>
	                            
				<!-- alerts -->
				@if (ViewData.ModelState.ContainsKey("INVALID_CREDENTIALS"))
				{
				<p class="alert error">Credentials not found. Please verify your username and password.</p>
				}

				@if (false) {
				<p class="alert warning">Warning message</p>
				<p class="alert notice">Notice message</p>
				}
				<!-- /alerts -->
	                            
				@using (Html.BeginForm()) {
				<div>
					<fieldset>
						<legend>Account Information</legend>
							<div class="editor-label">
								@Html.LabelFor(m => m.Username)
							</div>
							<div class="editor-field">
								@Html.TextBoxFor(m => m.Username, new { @class="text" })
								<span class="info">Letters and numbers only. 10 characters max</span>
								@Html.ValidationMessageFor(m => m.Username)
							</div>
												
							<div class="editor-label">
								@Html.LabelFor(m => m.Password)
							</div>
							<div class="editor-field">
								@Html.PasswordFor(m => m.Password, new { @class="text" })
								<span class="info">10 chars max</span>
								@Html.ValidationMessageFor(m => m.Password)
							</div>

							<div class="editor-label">
								@Html.LabelFor(m => m.RememberMe)
							</div>
							<div class="editor-field">
								@Html.CheckBoxFor(m => m.RememberMe)
								@Html.ValidationMessageFor(m => m.RememberMe)
							</div>
						</fieldset>
					</div>											                                
					<p><input type="submit" name="btn-submit" id="btn-submit" value="Log on" /></p>

					<p><a href="#">Forgot my password</a></p>	                                
				}
			</div>	                        
		</div>
		<!-- /form -->
	</div>              	
</div>
<!-- /main wrapper -->