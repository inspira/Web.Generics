@model Inspira.Blog.WebMvc3.Models.Identity.RegisterModel

@{
    Layout = "";
}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>@View.Title</title>
	<meta http-equiv="Content-Type" content="text/html;charset=utf-8" /> 
	<link rel="stylesheet" href="http://yui.yahooapis.com/2.7.0/build/reset-fonts-grids/reset-fonts-grids.css" type="text/css" />
	<link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/2.8.1/build/calendar/assets/skins/sam/calendar.css" />
	<link rel="stylesheet" href="@Url.Content("~/assets/css/yuiapp.css")" type="text/css" />
	<link rel="stylesheet" href="@Url.Content("~/assets/css/jquery-ui.css")" type="text/css" />
	<link id="theme" rel="stylesheet" href="@Url.Content("~/assets/css/structure.css")" type="text/css" />
</head>
<body class="rounded">
    <div id="doc">
		<!-- page body -->
        <div id="bd">
            <div id="yui-main">
            	<!-- main wrapper -->
                <div class="yui-b">
	                <div class="yui-g">
						<h2>Register</h2>
						<p>Fill the fields below.</p>
						<!-- form -->
						<div class="block">
							<div class="hd">
								<h2>Form</h2>
							</div>
							<div class="bd">
								<h3>Form data</h3>
	                            
								<!-- alerts -->
								@if (ViewData.ModelState.ContainsKey("USER_ALREADY_EXIST")) {
								<p class="alert error">User already exists.</p>
								}
								@if (ViewData.ModelState.ContainsKey("PASSAWORD_AND_CONFIRM_DONT_MACHT")){
								<p class="alert error">Password and Confirm Password don't match.</p>
								}
								@if (ViewData.ModelState.ContainsKey("EMAIL_ALREADY_EXIST")){
								<p class="alert error">Invalid e-mail.</p>
								}
								@if (false) {
								<p class="alert warning">Warning message</p>
								<p class="alert notice">Notice message</p>
								}
								<!-- /alerts -->
	                            
								@using (Html.BeginForm()) {
									@Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
									<div>
										<fieldset>
											<legend>Account Information</legend>

											<div class="editor-label">
												@Html.LabelFor(m => m.Username)
											</div>
											<div class="editor-field">
												@Html.TextBoxFor(m => m.Username, new { @class="text" })
												@Html.ValidationMessageFor(m => m.Username)
											</div>

											<div class="editor-label">
												@Html.LabelFor(m => m.Email)
											</div>
											<div class="editor-field">
												@Html.TextBoxFor(m => m.Email, new { @class="text" })
												@Html.ValidationMessageFor(m => m.Email)
											</div>

											<div class="editor-label">
												@Html.LabelFor(m => m.Password)
											</div>
											<div class="editor-field">
												@Html.PasswordFor(m => m.Password, new { @class="text" })
												@Html.ValidationMessageFor(m => m.Password)
											</div>

											<div class="editor-label">
												@Html.LabelFor(m => m.ConfirmPassword)
											</div>
											<div class="editor-field">
												@Html.PasswordFor(m => m.ConfirmPassword, new { @class="text" })
												@Html.ValidationMessageFor(m => m.ConfirmPassword)
											</div>

											<p>
												<input type="submit" value="Register" />
											</p>
										</fieldset>
									</div>
								}
							</div>	                        
						</div>
						<!-- /form -->
					</div>              	
                </div>
                <!-- /main wrapper -->
            </div>            
        </div>
		<!-- /page body -->		
		<!-- footer - copyright info -->
        <div id="ft">
            <p class="inner">Copyright &copy; 2010 Inspira Admin</p>
        </div>
		<!-- /footer - copyright info -->
    </div>

	@* yui *@
	@* <script src="http://yui.yahooapis.com/3.0.0pr2/build/yui/yui-min.js" type="text/javascript"></script> *@

	@* yui jquery / plugins *@
	@*
	<script src="@Url.Content("~/assets/js/mvc/jquery-1.4.1-vsdoc.js")">
	*@
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script> 
	<script>!window.jQuery && document.write('<script src="@Url.Content("~/assets/js/jquery-1.4.2.min.js")"><\/script>')</script>   
    
	@* TODO: usar minify *@
	<script src="@Url.Content("~/assets/js/plugins/jquery.maskedinput-1.2.2.min.js")"></script>
	<script src="@Url.Content("~/assets/js/plugins/jquery.price_format.1.3.js")"></script>
	<script src="@Url.Content("~/assets/js/custom/default-config.js")"></script>

	@* jQuery UI *@
	<script src="@Url.Content("~/assets/js/plugins/jquery-ui-1.8rc3.min.js")"></script>
	<script src="@Url.Content("~/assets/js/plugins/jquery.ui.datepicker-pt-BR.js")"></script>

	@* TinyMCE *@
	<script src="@Url.Content("~/assets/js/TinyMCE/tiny_mce.js")"></script>

</body>
</html>