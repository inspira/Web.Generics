<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title>@View.Title</title>
	<meta http-equiv="Content-Type" content="text/html;charset=utf-8" /> 
	<link rel="stylesheet" href="http://yui.yahooapis.com/2.7.0/build/reset-fonts-grids/reset-fonts-grids.css" type="text/css" />
	<link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/2.8.1/build/calendar/assets/skins/sam/calendar.css" />
	<link rel="stylesheet" href="@Url.Content("~/assets/css/yuiapp.css")" type="text/css" />
	<link rel="stylesheet" href="@Url.Content("~/assets/css/jquery-ui.css")" type="text/css" />
	<link id="theme" rel="stylesheet" href="@Url.Content("~/assets/css/structure.css")" type="text/css" />
</head>
<body class="rounded">
    <div id="doc3" class="yui-t6">		
		<!-- header -->
        <div id="hd">
            <h1>Inspira Admin</h1>
			<div id="navigation">
				<ul id="primary-navigation">
					<li>@Html.ActionLink("Users", "List", "User")</li>
					<li>@Html.ActionLink("WebLogs", "List", "WebLog")</li>
					<li>@Html.ActionLink("Posts", "List", "Post")</li>
					<li>@Html.ActionLink("Comments", "List", "Comment")</li>
					<li>@Html.ActionLink("Tags", "List", "Tag")</li>
				</ul>
				<ul id="user-navigation">
					<li><a href="#">Profile</a></li>
					<li><a href="#">Settings</a></li>
					<li><a href="#">Logout</a></li>
					@Html.Partial("_LogOnPartial")
				</ul>
				<div class="clear"></div>
			</div>
        </div>
        <!-- /header -->

		@RenderBody()

		<!-- footer - copyright info --> 
		<div id="ft"> 
		    <p class="inner">Copyright &copy; 2010 Inspira Admin</p> 
		</div> 
		<!-- /footer - copyright info --> 
 
	</div> 
    
	@* yui *@
	@* <script src="http://yui.yahooapis.com/3.0.0pr2/build/yui/yui-min.js" type="text/javascript"></script> *@

	@* yui jquery / plugins *@
	@*
	<script src="@Url.Content("~/assets/js/mvc/jquery-1.4.1-vsdoc.js")">
	*@
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script> 
	<script>!window.jQuery && document.write('<script src="@Url.Content("~/assets/js/jquery-1.4.2.min.js")"><\/script>')</script>   
    
	@* TODO: usar minify *@
	<script src="@Url.Content("~/assets/js/plugins/jquery.maskedinput-1.2.2.min.js")"></script>
	<script src="@Url.Content("~/assets/js/plugins/jquery.price_format.1.3.js")"></script>
	<script src="@Url.Content("~/assets/js/custom/default-config.js")"></script>

	@* jQuery UI *@
	<script src="@Url.Content("~/assets/js/plugins/jquery-ui-1.8rc3.min.js")"></script>
	<script src="@Url.Content("~/assets/js/plugins/jquery.ui.datepicker-pt-BR.js")"></script>

	@* TinyMCE *@
	<script src="@Url.Content("~/assets/js/TinyMCE/tiny_mce.js")"></script>
</body>
</html>